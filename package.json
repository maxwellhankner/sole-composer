{
  "name": "sole-composer",
  "version": "1.0.0",
  "description": "Backend for Sole Composer - A 3D shoe design application",
  "main": "server/index.js",
  "engines": {
    "node": "20.11.1",
    "npm": ">=10.2.4"
  },
  "scripts": {
    "start": "cd server && NODE_ENV=production node index.js",
    "dev": "concurrently -n 'server,client' -c '#3c863a,#61dbfb' \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && NODE_ENV=development nodemon --inspect index.js",
    "dev:client": "cd client && npm run start",
    "build": "cd client && npm run build",
    "preview": "concurrently -n 'server,client' -c '#3c863a,#61dbfb' \"npm run dev:server\" \"cd client && npm run preview\"",
    "clean": "rm -rf node_modules client/node_modules",
    "setup": "npm install && cd client && npm install",
    "fresh": "npm run clean && npm run setup"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.515.0",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "is-svg": "^5.0.0",
    "mongoose": "^8.1.3",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "parse": "^5.3.0",
    "passport": "^0.7.0",
    "passport-google-oauth": "^2.0.0",
    "path": "^0.12.7",
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxwellhankner/sole-composer"
  },
  "author": "Maxwell Hankner",
  "license": "ISC"
}
